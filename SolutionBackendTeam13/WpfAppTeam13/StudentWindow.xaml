<Window x:Class="WpfAppTeam13.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTeam13"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New Student" Name="MnuNewStudent" Click="MnuNewStudent_Click"></MenuItem>
                    <MenuItem Header="Close" Name="MnuClose"></MenuItem>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom"></StatusBar>
            <StackPanel>
                <StackPanel Visibility="Hidden" x:Name="StackNewStudent" HorizontalAlignment="Center" Margin="10">
                    <WrapPanel>
                        <Label Content="First name:" Width="125"/>
                        <TextBox x:Name="TxtFirstName" Margin="5" Width="125"/>
                    </WrapPanel>
                    <WrapPanel>
                        <Label Content="Last name:" Width="125"/>
                        <TextBox x:Name="TxtLastName" Margin="5" Width="125"/>
                    </WrapPanel>
                    <WrapPanel>
                        <Button x:Name="BtnAddStudent" Content="Add student" Width="125" Margin="5" Click="BtnInsert_Click"/>
                        <Button x:Name="BtnCancel" Content="Cancel" Width="125" Margin="5" Click="BtnCancel_Click"/>
                    </WrapPanel>
                </StackPanel>
                <DataGrid x:Name="DgdStudent" Margin="10"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
